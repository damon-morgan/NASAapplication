<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/my_drawer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/tool_menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">


        <TextView
            android:id="@+id/settingsOptionTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="207dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="22dp"
            android:text="@string/settingsTextTwo"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/settingsOptionThree"
            app:layout_constraintEnd_toStartOf="@+id/bg_array"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/bg_array"
            android:layout_width="43dp"
            android:layout_height="20dp"
            android:layout_marginTop="214dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settingsOptionTwo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/settingsOptionThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="608dp"
            android:text="@string/settingsTextThree"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_array"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingsOptionTwo" />

        <Spinner
            android:id="@+id/txt_array"
            android:layout_width="41dp"
            android:layout_height="22dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="608dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settingsOptionThree" />

        <TextView
            android:id="@+id/settingsOptionFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="556dp"
            android:text="@string/settingsTextFour"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Print"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Print"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="544dp"
            android:text="@string/print"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/settingsOptionFour" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/naviView"
        app:menu="@menu/navi_menu">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>